<script type="text/template" id="tpl_blog">
	<#var imgArr = ['css','css3','html5','javascript','node','gulp','vue','less','jquery'];#>
	<#for(var i = 0;i<data.length;i++){#>
		<article>
			<#if(imgArr.indexOf(data[i].tags[0].toLowerCase())<=0){#>
				<a href="/blog/detail?id=<#=data[i].aid#>" class="xx-u-ttpic" style="background-image: url(/images/titleImg/default.jpg);">
				</a>
			<#}else{#>
				<a href="/blog/detail?id=<#=data[i].aid#>" class="xx-u-ttpic" style="background-image: url(/images/titleImg/<#=data[i].tags[0].toLowerCase()#>.jpg);">
				</a>
			<#}#>
			<div class="xx-m-txt">
				<h2><a href="/blog/detail?id=<#=data[i].aid#>"><#= data[i].title #></a></h2>
				<span><i class="iconfont"></i>发表于:<#= Utils.timeFormat(data[i].time)#></span>
				<p><#= data[i].brief #>...<a href="/blog/detail?id=<#=data[i].aid#>">[阅读全文]</a></p>
			</div>
		</article>
		<#if(i<(data.length-1)){#><hr><#}#>
	<#}#>
</script>
<script>
	$(function(){
		var tag = Utils.getUrlquery('tag');
		var schWord = Utils.getUrlquery('schWord');
		if(tag){
			//$('#schWork').val(tag);
			getList(1,5,tag);
		}else if(schWord){
			//$('#schWork').val(schWord);
			getList(1,5,schWord);
		}else{
			getList(1);
		}
	});
	//分页限制
	$('#btn-prev, #btn-next').on('click', function(){
		document.body.scrollTop = 0;
		getList($(this).attr('data-page'), 5);
		$(this).parents('li').siblings().find('button').attr({'disabled':false});
	});
	//请求文章数据
	function getList(cur, ps, sch){
 		$.ajax({
 			url:'/ajax/getList',
 			type:'GET',
 			dataType:'JSON',
 			data:{curPage: cur,pageSize: ps,schWord:sch,from:'front'},
 			success:function(rslt){
 				if(rslt.res_code==2){
 					$('.xx-m-article').html(rslt.res_msg);
 				}else{
 					var html = $('#tpl_blog').html();
 					_.templateSettings = {	//避免前端模板被ejs语法解析
 						evaluate    : /<#([\s\S]+?)#>/g,
 					    interpolate : /<#=([\s\S]+?)#>/g,
 					    escape      : /<#-([\s\S]+?)#>/g
 					};
 					var template = _.template(html);
 					var tpl = template({data:rslt.dataList});
 					$('#J_blog').html(tpl);
 					//分页信息
 					if(rslt.page==1){
 						$('#btn-prev').attr({'disabled':true}).css({'color':'#ddd'});
 					}else{
 						$('#btn-prev').attr({'data-page':parseInt(rslt.page)-1}).css({'color':'#337ab7'});
 					}
 					if((rslt.page-1)*rslt.page_size+rslt.dataList.length==rslt.total){
 						$('#btn-next').attr({'disabled':true}).css({'color':'#ddd'});
 					}else{
 						$('#btn-next').attr({'data-page':parseInt(rslt.page)+1}).css({'color':'#337ab7'});
 					}
 				}
 			},
 			error:function(rslt){}
 		})
 	};
</script>